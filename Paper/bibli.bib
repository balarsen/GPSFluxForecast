	Journal = {Space Weather},
	Keywords = {solar wind, forecasting, ensembles, MHD},
	Number = {11},
	Pages = {1461-1474},
	Title = {Probabilistic Solar Wind Forecasting Using Large Ensembles of Near-Sun Conditions With a Simple One-Dimensional ``Upwind'' Scheme},
	Url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2017SW001679},
	Volume = {15},
