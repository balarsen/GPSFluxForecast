	Journal = {Space Weather},
	Keywords = {space weather, numerical modelling, stochastic processes},
	Number = {6},
	Pages = {395-405},
	Title = {Ensemble downscaling in coupled solar wind-magnetosphere modeling for space weather forecasting},
	Url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2014SW001064},
