	Journal = {Space Weather},
	Keywords = {model validation, forecasting},
	Number = {1},
	Pages = {69-88},
	Title = {Measures of Model Performance Based On the Log Accuracy Ratio},
	Url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1002/2017SW001669},
